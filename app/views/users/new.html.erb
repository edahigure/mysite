<h1 align="center"> Sign up for Repartiendo</h1>
<%= render 'shared/errors',obj: @user%>

<div class="row">
  <div class="col-12">
    <%= form_with(model: @user, data: { turbo: false }) do |f| %>
      <div class="row mb-3 align-items-center">
        <div class="col-sm-2">
          <%= f.label :username, class: "form-label mb-0" %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :username, 
                class: "form-control", 
                placeholder: "Enter user name",
                autofocus: true %>
        </div>
      </div>
      
      <div class="row mb-3 align-items-center">
        <div class="col-sm-2">
          <%= f.label :email, class: "form-label mb-0" %>
        </div>
        <div class="col-sm-10">
          <%= f.email_field :email,                
                class: "form-control", 
                placeholder: "Body of article" %>
        </div>
      </div>

      <div class="row mb-3 align-items-center">
        <div class="col-sm-2">
          <%= f.label :password, class: "form-label mb-0" %>
        </div>
        <div class="col-sm-10">
          <%= f.password_field :password,                
                class: "form-control", 
                placeholder: "Body of article" %>
        </div>
      </div>
      
      <div class="row mb-3">
        <div class="col-sm-10 offset-sm-2">
          <%= f.submit "Sign up", class: "btn btn-primary btn-lg me-2" %>
          <%= link_to "Cancel and return to articles", 
                articles_path, 
                class: "btn btn-outline-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>