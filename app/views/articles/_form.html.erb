<%= render 'shared/errors',obj: @article%>

<div class="row">
  <div class="col-12">
    <%= form_with(model: @article, data: { turbo: false }) do |f| %>
      <div class="row mb-3 align-items-center">
        <div class="col-sm-2">
          <%= f.label :title, class: "form-label mb-0" %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :title, 
                class: "form-control", 
                placeholder: "Title of article",
                autofocus: true %>
        </div>
      </div>
      
      <div class="row mb-3 align-items-center">
        <div class="col-sm-2">
          <%= f.label :description, class: "form-label mb-0" %>
        </div>
        <div class="col-sm-10">
          <%= f.text_area :description,
                rows: 10, 
                class: "form-control", 
                placeholder: "Body of article" %>
        </div>
      </div>
      
      <div class="row mb-3">
        <div class="col-sm-10 offset-sm-2">
          <%= f.submit class: "btn btn-primary btn-lg me-2" %>
          <%= link_to "Cancel and return to articles", 
                articles_path, 
                class: "btn btn-outline-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>