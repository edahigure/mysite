<h1 align="center"> Log in </h1>
<%= form_with(sessions: @user, data: { turbo: false }, :html => {class: "form-horizontal",role: "form"}) do |f| %>
    <div class="row mb-3 ">
      <div class="col-sm-2">
        <%= f.label :email, class: "form-label mb-0" %>
      </div>
      <div class="col-sm-10">
        <%= f.email_field :email, 
              class: "form-control", 
              placeholder: "Enter email ",
              autofocus: true %>
      </div>
    </div>
    
    

    <div class="row mb-3 align-items-center">
      <div class="col-sm-2">
        <%= f.label :password, class: "col-form-label" %>
      </div>
      <div class="col-sm-10 ">
        <%= f.password_field :password,                
              class: "form-control", 
              placeholder: "Enter your password",
              autocomplet: "off" %>
      </div>
    </div>
    
    <div class="row mb-3">
      <div class="col-sm-10 offset-sm-2">
        <%= f.submit "Log in"  , class: "btn btn-primary btn-lg me-2" %> 
        <%= link_to "Cancel and return to articles", 
              articles_path, 
              class: "btn btn-outline-secondary" %>
      </div>
    </div>
  <% end %>